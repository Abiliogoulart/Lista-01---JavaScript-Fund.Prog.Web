<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Ex 4 - Tabuada</title>
</head>
<body>
    <h1>Exibir a Tabuada</h1>
    <div id="resultado">Aguardando entrada...</div>

    <script>
        const numeroStr = prompt("Digite um número para exibir a tabuada (de 1 a 10):");
        const numero = parseInt(numeroStr); 
        let tabuadaHTML = "";

        if (isNaN(numero)) {
            tabuadaHTML = "Entrada inválida. Por favor, digite um número.";
        } else {
            tabuadaHTML += `<h3>Tabuada do ${numero}</h3>`;

            for (let i = 1; i <= 10; i++) {
                const resultado = numero * i;
                tabuadaHTML += `${numero} x ${i} = ${resultado}<br>`; 
            }
        }
        document.getElementById('resultado').innerHTML = tabuadaHTML;
    </script>
</body>
</html>
